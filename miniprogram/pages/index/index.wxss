page{
  background: #ff6801;
}
/* 搜索框 */
.search{
  box-sizing: border-box;
  width: 85%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  border: 1px solid #fff;
  border-radius: 50rpx;
  padding-left: 40rpx;
  padding-right: 20rpx;
  margin-top: 15rpx;
  align-items: center;
  align-self: center;
  justify-content: space-between;
  background-color: #fff;
}
/* 搜索列表 */
.list{
  width: 80%;
  display: flex;
  flex-direction: column;
  background-color: rgba(255, 255, 255, 1);
  align-self: center;
  border-radius: 10rpx;
}
.list_1{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #ff6801;
  margin-top: 10rpx;
  justify-content: space-between;
}
.list text{
  width: 200rpx;
}
.list image{
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
}
/* 轮播图 */
.banner{
  width: 100%;
  margin-top: 15rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}

/* 分类 */
.major{
  height: 208rpx;
  white-space: nowrap;
  padding: 30rpx 0;
  box-sizing: border-box;
  text-align: center;
  background-color: #fff;
}
.major .box{
  text-align: center;
  width: 220rpx;
  display: inline-block;
}
.major .pic{
  width: 100rpx;
  height: 100rpx;
}
.major .txt{
  font-size: 28rpx;
  margin-top: 3rpx;
}

/* 产品列表 */
.line{
  width: 90%;
  height: 5rpx;
  background-color: #ff6801;
  margin-bottom: 20rpx;
  margin-left: 5%;
}
.product{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-self: center;
  align-items: center;
  background-color: snow;
}
.product_1{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.img{
  width: 350rpx;
  height: 250rpx;
  border-radius: 10rpx;
}
.product_1 .txt{
  width: 90%;
  font-size: 22rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  /* border: 1px solid silver; */
  background-color: rgb(245,239,239);
  border-radius: 20rpx;
  align-items: center;
  justify-content: space-between;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}
.price{
  color: red;
  font-size: 26rpx;
}
.salesVolume{
  font-size: 23rpx;
  font-weight: 200;
}