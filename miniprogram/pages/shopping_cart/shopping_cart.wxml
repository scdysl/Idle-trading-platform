<checkbox-group bindchange="choose">
  <block wx:for="{{product}}" wx:key="_id">
  <!-- 商品信息模块 -->
  <view class="product_list">
    <view class="list_left">
      <checkbox value="{{item._id}}" checked="{{item.checked}}"></checkbox>
      <view class="product_info">
        <image src="{{item.product_src}}" style="width:100rpx;height:100rpx;"></image>
      
      <view class="txt">
        <view style="font-size:40rpx">{{item.product_name}}</view>
        <view style="color:red">￥:{{item.product_price}}</view>
      </view>
      </view>
    </view>
 
<!-- 商品数量功能模块 -->
    <view class="product_number">
    <image src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/reduce.png" style="width:40rpx;height:40rpx;"></image>
    <view style="margin:0 20rpx">{{item.product_num}}</view>
    <image src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/plus.png" style="width:40rpx;height:40rpx;"></image>
    </view>
  </view>
  <view class="line"></view>
  </block>
</checkbox-group>

<!-- 按钮 -->
<view class="btn">
  <!-- 这里可以加个全选 -->
  <button bindtap="delete" size="mini" type="warn" plain>删除</button>
  <button open-type="contact" size="mini" type="primary">联系客服</button>
  <view class="pay">
    <view>结算</view>
    <view>({{money}})</view>
  </view>
</view>