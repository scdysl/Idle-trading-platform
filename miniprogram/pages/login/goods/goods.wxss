.goodslist{
  background: #F7F8FA;
  width: 100%;
  height: 15vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 5rpx 5rpx;
}
.name{
  font-size: 30rpx;
}
.price{
  color: red;
  font-size: 35rpx;
}
.clock,.address{
  font-size: 25rpx;
}
.goodsleft{
  height: 100%;
  display: flex;
  align-items: center;
}
.goodsright{
  width: 45%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.clean{
  margin-right:30rpx;
  outline: none;
  background-color: transparent;
  line-height: inherit;
}