<wxs src="../../../utils/tools.wxs" module="tools" />
<view>
  <block wx:if="{{goodslist}}">
    <view bindtap="goInfo"  data-id="{{item._id}}" class="goodslist" wx:for="{{goodslist}}" wx:key="key">
        <view class="goodsleft">
          <image style="margin:0 20rpx;width:100rpx;height:100rpx" src="{{item.thumb}}"></image>
          <view class="txt">
            <view class="name">{{item.title}}</view>
            <view class="price">￥:{{item.price}}</view>
          </view>
        </view>
        <view class="goodsright">
          <view>
            <view class="clock"><image style="width:26rpx;height:26rpx;margin-left:1rpx;margin-right:10rpx" src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/updatetime.png"></image>{{tools.formatTime(item.updatetime)}}</view>
            <view class="address"><image style="width:28rpx;height:28rpx;margin-right:10rpx" src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/place.png"></image>{{item.address}}</view>
          </view>
          <button bindtap="delete" data-id="{{item._id}}" class="clean" style="margin: 0 10rpx 0 20rpx;padding: 0;width:45rpx">
            <image style="width:45rpx;height:45rpx;" src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/deletegoods.png"></image>
          </button>
        </view>
    </view>
  </block>
  <block wx:else>
    <text style="margin:0 auto;">暂无数据</text>
  </block>
</view>