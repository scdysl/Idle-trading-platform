
<!-- 搜索框 -->
<view class="search" bindtap="tosearch">
  <input disabled placeholder="请输入要搜索的商品" />
  <image src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/search.png" style="width:50rpx;height:50rpx;"></image>
</view>

<!-- 搜索列表 -->
<view class="list" >
  <block  wx:for="{{search}}" wx:key="_id">
  <navigator class="list_1" url="../product_detail/product_detail?id={{item._id}}">
    <image src="{{item.src[0]}}" ></image>
    <text>商品：{{item.name}}</text><text>价格：{{item.price}}元</text>
  </navigator>
  </block>
</view>
<!-- 轮播图 -->
<view class="banner">
  <swiper autoplay circular indicator-dots indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#555" interval="4000" >
  <swiper-item wx:for="{{banner}}" wx:key="_id">
    <image src="{{item.src}}"></image>
  </swiper-item>
</swiper>
</view>

<!-- 分类模块 -->
<scroll-view scroll-x  class="major">
      <navigator class="box" url="../list/list?index=0&searchValue=">
        <image class="pic" src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/phone.png" />
        <view class="txt">数码产品</view>
      </navigator>
      <navigator class="box" url="../list/list?index=1&searchValue=">
        <image class="pic" src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/book&pen.png" />
        <view class="txt">学习资料</view>
      </navigator>
      <navigator class="box" url="../list/list?index=2&searchValue=">
        <image class="pic" src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/phy.png" />
        <view class="txt">体育用品</view>
      </navigator>
      <navigator class="box" url="../list/list?index=3&searchValue=">
        <image class="pic" src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/clothing.png" />
        <view class="txt">生活用品</view>
      </navigator>
      <navigator class="box" url="../list/list?index=4&searchValue=">
        <image class="pic" src="cloud://yslcloud-7gplj5eoab9beb35.7973-yslcloud-7gplj5eoab9beb35-1305085852/img/icons/all.png" />
        <view class="txt">全部</view>
      </navigator>
  </scroll-view>

  <!-- 产品列表 -->
  <view class="product">
    <view class="line"></view>
    <block wx:for="{{product}}" wx:key="id">
    <navigator class="product_1" url="../product_detail/product_detail?id={{item._id}}">
      <image src="{{item.thumb}}" class="img"></image>
      <view class="txt">
        <view>
          <text>{{item.title}}</text>
          <text class="price">￥{{item.price}}</text>
        </view>
        <text class="salesVolume">浏览量：{{item.hits}}</text>
      </view>
    </navigator>
    </block>
  </view>